<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TempoAgora.MainPage">

    <ScrollView>
        <StackLayout Spacing="10" Margin="10">
            <Button Text="Obter Localização" Clicked="ObterLocalizacao"/>

            <Label Text="Latitude"/>
            <Entry x:Name="lbl_latitude" Text="37"/>

            <Label Text="Longitude:"/>
            <Entry x:Name="lbl_longitude" Text="-122"/>

            <Button Text="Obter Placemark" Clicked="ObterPlacemark"/>

            <Label x:Name="lbl_reverso" Text="Dados Gerais do Local"/>

            <Button Text="Obter Previsão do Tempo" Clicked="ObterPrevisao"/>

            <Label x:Name="lbl_previsao"/>
            <Button Text="Historico" Clicked="HistoricoPrevisao"/>
        </StackLayout>
    </ScrollView>    

</ContentPage>
